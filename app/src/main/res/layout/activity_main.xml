<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olivier.MainActivity"
    tools:ignore="MergeRootFrame" >
<LinearLayout   android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/buttons"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:weightSum="1">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fait"
        android:padding="30px"
        android:id="@+id/buttonDone"
        android:background="@drawable/green_round"
        android:gravity="center_vertical|center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sorti pas  fait"
        android:layout_marginTop="50px"
        android:id="@+id/buttonOutButNotDone"
        android:background="@drawable/orange_round"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:gravity="center_vertical|center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas sorti"
        android:background="@drawable/red_round"
        android:layout_marginTop="50dp"
        android:id="@+id/buttonNotOut"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_weight="0.60"
        android:gravity="center_vertical|center_horizontal"/>
</LinearLayout>

    <Button
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txtInfo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.olivier.button.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        app:cb_text="hello world"
        app:cb_color="#99CC00"
        app:cb_pressed_ring_width="8dip"
        app:cb_text_size="10"/>

</RelativeLayout>
